<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="765dp"
        android:id="@+id/scrollView"
        android:fillViewport="false">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/imageView"
                android:contentDescription="Shell_logo"
                android:src="@drawable/shell"
                android:layout_marginTop="20dp" />

            <EditText
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:id="@+id/marque"
                android:layout_weight="1"
                android:layout_marginTop="20dp"
                android:background="@drawable/oval"
                android:hint="Marque"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textSize="30dp" />
            <EditText
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:id="@+id/modele"
                android:layout_weight="1"
                android:layout_marginTop="1dp"
                android:background="@drawable/oval"
                android:hint="Model"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textSize="30dp" />
            <TextView
                android:id="@+id/dateVoiture"
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:layout_marginTop="1dp"
                android:hint="Date"
                android:textColor="#000000"
                android:textAlignment="center"
                android:textSize="30dp"
                android:textStyle="bold"
                android:background="@drawable/oval" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="20dp">

                <RadioButton
                    android:layout_width="150dp"
                    android:layout_height="60dp"
                    android:text="Diesel"
                    android:id="@+id/radioButton"
                    android:textSize="30dp"
                    android:layout_marginRight="20dp"
                    android:layout_gravity="right" />

                <RadioButton
                    android:layout_width="150dp"
                    android:layout_height="60dp"
                    android:text="Essence"
                    android:id="@+id/radioButton2"
                    android:textSize="30dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp" />
            </FrameLayout>
            <TextView
                android:layout_width="400dp"
                android:layout_height="40dp"
                android:text="Dernier Ravitaillement chez :"
                android:id="@+id/textView2"
                android:layout_centerVertical="true"
                android:layout_alignLeft="@+id/radioButton"
                android:layout_alignStart="@+id/radioButton"
                android:layout_marginTop="20dp"
                android:textSize="25dp"
                android:textStyle="bold"
                android:textAlignment="center"
                android:textColor="#000000" />

            <Spinner
                android:id="@+id/spinner1"
                android:layout_width="150dp"
                android:layout_height="60dp"
                android:textSize="30dp"
                android:textAlignment="center"
                android:background="@drawable/oval"
                android:layout_gravity="center_vertical|center_horizontal"
                />
            <EditText
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:id="@+id/marqueH"
                android:layout_weight="1"
                android:layout_marginTop="8dp"
                android:background="@drawable/oval"
                android:hint="Marque d&apos;Huile"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textSize="30dp" />
            <EditText
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:id="@+id/typeH"
                android:layout_weight="1"
                android:layout_marginTop="1dp"
                android:background="@drawable/oval"
                android:hint="Type de l&apos;huile"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textSize="30dp" />
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageButton
                    android:layout_width="120dp"
                    android:layout_height="50dp"
                    android:id="@+id/terminer"
                    android:background="@drawable/finish"
                    android:layout_gravity="right|center_vertical"
                    android:padding="40dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="20dp" />

                <ImageButton
                    android:layout_width="120dp"
                    android:layout_height="50dp"
                    android:id="@+id/precedent"
                    android:background="@drawable/previous"
                    android:padding="40dp"
                    android:layout_gravity="left|center_vertical"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="20dp" />

            </FrameLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>