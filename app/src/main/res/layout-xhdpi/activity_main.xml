<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/prenom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="PrÃ©nom"
        android:padding="7dp"
        android:textColor="#000000"
        android:textAlignment="center"
        android:textSize="30dp"
        android:textStyle="bold"
        android:background="@drawable/oval"
        android:layout_below="@+id/nom"
        android:layout_centerHorizontal="true" />
    <TextView
        android:id="@+id/date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Date de naissance"
        android:padding="7dp"
        android:textColor="#000000"
        android:textAlignment="center"
        android:textSize="30dp"
        android:textStyle="bold"
        android:background="@drawable/oval"
        android:layout_below="@+id/prenom"
        android:layout_centerHorizontal="true" />
    <EditText
        android:id="@+id/email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Email"
        android:padding="7dp"
        android:textColor="#000000"
        android:textAlignment="center"
        android:textSize="30dp"
        android:textStyle="bold"
        android:background="@drawable/oval"
        android:layout_below="@+id/date"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <EditText
        android:id="@+id/cin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="CIN"
        android:padding="7dp"
        android:textColor="#000000"
        android:textAlignment="center"
        android:textSize="30dp"
        android:textStyle="bold"
        android:background="@drawable/oval"
        android:layout_below="@+id/email"
        android:layout_centerHorizontal="true" />
    <EditText
        android:id="@+id/adresse"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Adresse"
        android:padding="7dp"
        android:textColor="#000000"
        android:textAlignment="center"
        android:textSize="30dp"
        android:textStyle="bold"
        android:background="@drawable/oval"
        android:layout_below="@+id/cin"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:id="@+id/facebook"
        android:background="@drawable/btnfb"
        android:padding="40dp"
        android:layout_alignTop="@+id/suivant"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="20dp"
        android:layout_gravity="left|bottom" />

    <ImageButton
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:id="@+id/suivant"
        android:background="@drawable/btnnext"
        android:padding="40dp"
        android:layout_gravity="right|bottom"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp" />

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/logo_karahba"
        android:id="@+id/imageView"
        android:layout_gravity="center_horizontal|top"
        android:layout_marginTop="42dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:id="@+id/nom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nom"
        android:padding="7dp"
        android:textColor="#000000"
        android:textAlignment="center"
        android:textSize="30dp"
        android:textStyle="bold"
        android:background="@drawable/oval"
        android:layout_gravity="center_horizontal|top"
        android:layout_below="@+id/imageView"
        android:layout_centerHorizontal="true" />


</RelativeLayout>

